<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:background="@drawable/ic_app_bg"
    tools:context=".EditFaceCommandControlActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView"
        android:layout_marginBottom="-100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/safisoft_logo"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:elevation="1dp"
                android:scaleType="fitStart"
                android:src="@drawable/ic_face_command_logo_text" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtv_edit_or_new_project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="30dp"
                        android:maxLines="3"
                        android:text="New"
                        android:textColor="@color/colorText"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:maxLines="3"
                        android:text="Project"
                        android:textColor="@color/colorText"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/man_scan_gif" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-150dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="Project Name"
                android:textColor="@color/colorText"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtv_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="Project Name"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="Project Description"
                android:textColor="@color/colorText"
                android:textSize="12sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/txtv_project_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="Project Description"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_right_eye"
                    android:layout_width="120dp"
                    android:layout_height="155dp"
                    android:background="@drawable/btn_eff_right_eye"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/btn_smile"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:background="@drawable/btn_eff_smile"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/btn_left_eye"
                    android:layout_width="120dp"
                    android:layout_height="155dp"
                    android:background="@drawable/btn_eff_left_eye"
                    android:scaleType="fitXY" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_look_right"
                    android:layout_width="140dp"
                    android:layout_height="128dp"
                    android:background="@drawable/btn_eff_look_right"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/btn_look_left"
                    android:layout_width="140dp"
                    android:layout_height="128dp"
                    android:background="@drawable/btn_eff_look_left"
                    android:scaleType="fitXY" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_rotate_right"
                    android:layout_width="128dp"
                    android:layout_height="126dp"
                    android:background="@drawable/btn_eff_rotate_right"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/btn_rotate_left"
                    android:layout_width="128dp"
                    android:layout_height="126dp"
                    android:background="@drawable/btn_eff_rotate_left"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_look_down"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:background="@drawable/btn_eff_look_down"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/btn_look_up"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:background="@drawable/btn_eff_look_up"
                    android:scaleType="fitXY" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-635dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_done_right_eye"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_done_editing"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ic_done_smile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="75dp"
                    android:layout_marginStart="75dp"
                    android:src="@drawable/ic_done_editing"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ic_done_left_eye"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_done_editing"
                    android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="220dp"
                    android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_done_look_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="110dp"
                    android:src="@drawable/ic_done_editing"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ic_done_look_left"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="110dp"
                    android:src="@drawable/ic_done_editing"
                    android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="70dp"
                    android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_done_rotate_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="100dp"
                    android:src="@drawable/ic_done_editing"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ic_done_rotate_left"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="100dp"
                    android:src="@drawable/ic_done_editing"
                    android:visibility="invisible" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="180dp"
                    android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_done_look_down"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="70dp"
                    android:src="@drawable/ic_done_editing"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ic_done_look_up"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="70dp"
                    android:src="@drawable/ic_done_editing"
                    android:visibility="invisible" />

                </LinearLayout>

            </LinearLayout>


            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="100dp">

                <ImageButton
                    android:id="@+id/btn_save_Project"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/btn_eff_next_step"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Open Project"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-5637187199850424/3372623782">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>