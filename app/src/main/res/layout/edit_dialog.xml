<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:background="@drawable/ic_edit_dialog_bg"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lay_down"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:id="@+id/lay_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/lay_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txtv_command_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center"
                        android:text="Left Eye Commands"
                        android:textAlignment="center"
                        android:textColor="@color/colorText"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/imgv_command_pic"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY" />

                </LinearLayout>


                <TextView
                    android:id="@+id/txtv_command_first_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="start"
                    android:text="When Left Eye Closed"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtxt_command_first"
                    android:layout_width="230dp"
                    android:layout_height="36dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_edittext_edit_dialog"
                    android:gravity="center"
                    android:maxLength="20"
                    android:paddingStart="5dp"
                    android:paddingEnd="25dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtv_command_first_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="start"
                    android:text="Send this Command to Arduino when you close your left eye."
                    android:textColor="@color/colorText"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/txtv_command_second_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="start"
                    android:text="When Left Eye Closed"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtxt_command_second"
                    android:layout_width="230dp"
                    android:layout_height="36dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_edittext_edit_dialog"
                    android:gravity="center"
                    android:maxLength="20"
                    android:paddingStart="5dp"
                    android:paddingEnd="25dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtv_command_second_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="start"
                    android:text="Send this Command to Arduino when you close your left eye."
                    android:textColor="@color/colorText"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="You can leave ANY COMMAND EMPTY if you donâ€™t need it in your Project (If you leave the command field Empty, nothing will be sent to Arduino)."
                    android:textAlignment="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/lay_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btn_ok_in_dialog"
                android:layout_width="130dp"
                android:layout_height="37dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_eff_ok_done_small"
                android:scaleType="fitXY" />


            <ImageButton
                android:id="@+id/btn_cancel_in_dialog"
                android:layout_width="130dp"
                android:layout_height="37dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/btn_eff_cancel_in_dialog"
                android:scaleType="fitXY" />
        </LinearLayout>




    </RelativeLayout>

</LinearLayout>